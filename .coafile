[default]

[c]
bears = ClangComplexityBear, CSecurityBear
files = **.h

brace_indent = 0
indent_size = 4
braces_on_func_def_line = True
delete_optional_blank_lines = True
max_line_length = 79
use_spaces = False

[c++]
bears = CPPCheckBear, ClangComplexityBear
files = **.cpp

max_line_length = 79
brace_indent = 0
indent_size = 4
delete_optional_blank_lines = True
use_spaces = False

[links]
bears = InvalidLinkBear
files = **.json, **.h, **.xaml, **.cs, **.py, **.cpp, **.yml, **.md
link_ignore_regex = (xaml|clbin.com|127.0.0.1)

[xml]
bears = XMLBear
files = **.xaml

[json]
bears = JSONFormatBear
files = **.json

[python]
bears = PycodestyleBear
files = **.py

[markdown]
bears = MarkdownBear
files = **.md

[yaml]
bears = LineLengthBear, YAMLLintBear
files = **.yml
